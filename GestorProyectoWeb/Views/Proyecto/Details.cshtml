@model GestorProyectoWeb.Models.Proyecto

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

    </dl>
    <hr />
    
    <h4>Tareas</h4> 

    <div class="col-md-offset-10 col-md-10">
        @Html.ActionLink("Agregar Tarea", "Create", "Tarea", new { id = Model.Id}, null)
    </div>

    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Fecha Fin</th>
            <th></th>
        </tr>

    @foreach (var item in Model.Tareas)
    {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", "Tarea", new { id = item.IdTarea }, null) |
                @Html.ActionLink("Detalles", "Details", "Tarea", new { id = item.IdTarea }, null) |
                @Html.ActionLink("Eliminar", "Delete", "Tarea",  new { id = item.IdTarea }, null)
            </td>
        </tr>
    }
    </table>

</div>
<p>
    @Html.ActionLink("Volver", "Index")
</p>
